<Window x:Class="Ejercicio_IV._5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio_IV._5"
        mc:Ignorable="d"
        Icon="./Resources/Icon.png"
        Title="MainWindow" Height="200" Width="480">
    <Grid>
        <StackPanel Margin="5" Orientation="Vertical" HorizontalAlignment="Center">
            <Label Content="Calculadora promedial de grupo de personas" HorizontalAlignment="Center" FontSize="22"/>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Ingrese la cantidad de personas" Margin="2" HorizontalAlignment="Center"/> 
                <TextBox x:Name="cantTextBlock" Margin="2" Width="60"/>  
            </StackPanel>
            <Button x:Name="CantPersonasBtn" HorizontalAlignment="Center" Width="100" Margin="4" Click="CantPersonasBtn_Click">
                <StackPanel>
                    <Label Content="Aceptar"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>