<Window x:Class="Ejercicio_IV._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio_IV._1"
        mc:Ignorable="d"
        Title="Tabla de Multiplicar" Width="300" Height="200">
    <Grid Background="#F7FBFA"> 
        <StackPanel Margin="5" Orientation="Vertical" HorizontalAlignment="Center">
            <Label Content="Tabla de multiplicación" HorizontalAlignment="Center" FontSize="22"/>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Ingrese el numero" Margin="2" HorizontalAlignment="Center"/> 
                <TextBox x:Name="numeroTextBlock" Margin="2" Width="60"/> 
            </StackPanel>
            <Button x:Name="CalcularBTN" HorizontalAlignment="Center" Width="100" Margin="4" Click="CalcularBTN_Click">
                <StackPanel>
                    <Label Content="Multiplicar"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
