<Window x:Class="Ejercicio_V._5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio_V._5"
        mc:Ignorable="d"
        Icon="./Resources/Icon.png"
        Title="Program" Height="180" Width="460">
        <Grid Background="#F7FBFA"> 
            <StackPanel Margin="5" Orientation="Vertical" HorizontalAlignment="Center">
                <Label Content="Numero Random" HorizontalAlignment="Center" FontSize="22"/>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Ingrese el numero" Margin="2" HorizontalAlignment="Center"/> 
                    <TextBox x:Name="numeroTextBlock" Margin="2" Width="60"/> 
                </StackPanel>
                <Button x:Name="introducirBtn" HorizontalAlignment="Center" Width="150" Margin="4" Click="introducirBtn_Click">
                    <StackPanel>
                        <Label Content="Introducir número"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
</Window>
