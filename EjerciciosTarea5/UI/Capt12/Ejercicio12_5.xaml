<Window x:Class="EjerciciosTarea5.UI.Capt12.Ejercicio12_5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EjerciciosTarea5"
        mc:Ignorable="d"
        Icon="./Resources/Capt12_Icon.png"
        Title="Capitulo 12 Ejercicio 5" Height="260" Width="400">
    <Grid Background="#8C3066">
        <Image Source="./Resources/Capt12_BG.png" Height="225" Width="400" Grid.Row="1" Grid.RowSpan="8"/>
        <Label Foreground="#FFFFFF" FontSize="18" Content="Excepciones en WriteLine" HorizontalAlignment="Center" FontWeight="bold">
            <Label.Effect> 
                <DropShadowEffect ShadowDepth="3" BlurRadius="5" Opacity="0.9"/>
            </Label.Effect>
        </Label>
        <ListBox x:Name="ExcepcionesList" Width="350" Height="150" HorizontalAlignment="Center" Opacity="0.50"/>
    </Grid>
</Window>
