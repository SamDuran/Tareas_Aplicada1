<Window x:Class="Tarea3.Ejercicios.Capt6.Ejercicio6_3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tarea3"
        mc:Ignorable="d"
        Title="Capitulo 6 Ejercicio 3" Height="300" Width="450"
        Icon="./Resources/Icon.png">
    <Grid> 
        <Image Source ="./Resources/Main_BG.png" Height="350" Width="500" Grid.RowSpan="8" Grid.Row="1"/>
        <StackPanel HorizontalAlignment="Center" Margin="10" Orientation="Vertical">
            <TextBlock Text="Calculo de edad mayor" FontSize="22" Foreground="#FFFFFF"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text=" Digite la cantidad de habitaciones" Margin="10" Foreground="#FFFFFF"/>
                <TextBox x:Name="cantAulaTextBox" Width="40" Height="22" Margin="10"/>
            </StackPanel>
            <Button x:Name="agregarBTN"  Margin="10" Content="Agregar" Height="25" Width="60" Click="agregarBTN_Click"/>
            <Button x:Name="edadesBTN"  Margin="10" Content="Introducir edades" Height="27" Width="120" Click="edadesBTN_Click"/>
            <Button x:Name="resultadosBTN"  Margin="10" Content="Calcular" Height="27" Width="120" Click="resultadosBTN_Click"/>
        </StackPanel>
    </Grid>
</Window>
