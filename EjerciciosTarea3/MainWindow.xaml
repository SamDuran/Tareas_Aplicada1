            </MenuItem>
            <MenuItem x:Name="menuCapt7" Header="Capitulo 7" Background="#AB5A7C">
                <MenuItem x:Name="menuEjercicio7_1" Header="Ejercicio 1" Click="menuEjercicio7_1_Click"/>
                <MenuItem x:Name="menuEjercicio7_2" Header="Ejercicio 2" Click="menuEjercicio7_2_Click"/>
